<scroll-view scroll-x>
  <view class="subject-list">
    <view class='subject-item' wx:for="{{titleMap}}" wx:for-index="key" wx:for-item='value'>
      <view  data-key='{{key}}' bindtap='onTapNewstype'>{{value}}</view>
    </view>
  </view>
</scroll-view>

<view class='newsmsg-item' wx:for="{{shortNews}}" data-id='{{item.id}}' data-image='{{item.firstImage}}' bindtap='onTapNewsdetail'>
  <view class="newsmsg-wrapper">
    <view class="newstitle">{{item.title}}</view>
    <view class="newssource">{{item.source}}</view>
    <view class="newsdate">{{item.date}}</view>
  </view>
  <image class="newsfirstImage" src="{{item.firstImage}}"></image>
  
</view>